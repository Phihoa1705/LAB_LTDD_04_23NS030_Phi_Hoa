<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Manager Student"
        android:textColor="@color/text_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtIdStudentAdd"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/beautiful_edt"
        android:ems="10"
        android:hint="Nhập ID Sinh Viên"
        android:inputType="text"
        android:paddingStart="12dp"
        android:text=""/>

    <EditText
        android:id="@+id/edtNameStudentAdd"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/beautiful_edt"
        android:paddingStart="12dp"
        android:ems="10"
        android:hint="Nhập tên Sinh Viên"
        android:inputType="text"
        android:text="" />

    <RadioGroup
        android:id="@+id/radGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/radAva1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avata 1" />

        <RadioButton
            android:id="@+id/radAva2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avata 2" />

        <RadioButton
            android:id="@+id/radAva3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avata 3" />
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/beautiful_button"
        android:text="Submit" />

</LinearLayout>