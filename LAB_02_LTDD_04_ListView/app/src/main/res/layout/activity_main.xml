<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manager Cat"
        android:textColor="@color/color_txtview"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtIdMain"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Nhập id:"
        android:inputType="text"
        android:paddingStart="10dp"
        android:text="" />

    <EditText
        android:id="@+id/edtNameMain"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Nhập name:"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"
        android:text=""  />

    <Button
        android:id="@+id/btnFindImageMain"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/baseline_image_24"
        android:paddingStart="10dp"
        android:layout_gravity="left"
        android:textColor="@color/black"
        app:backgroundTint="@color/bg_btnAdd"
        android:text="Chọn ảnh" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/bg_btnMain"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_update" />

        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/bg_btnMain"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_add" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvManager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>